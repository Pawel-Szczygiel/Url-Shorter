<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Url Shortener</title>
</head>
<body>
  
    <div class="container">
        <h1 class="text-center mt-4">URL Shrinker</h1>

        <form action="/shortUrls" method="post" class="my-4 form-inline">
            
         
            <div class="row d-flex align-items-center">
                <div class="col-10">
                    <input placeholder="Url" required type="url" name="fullUrl" id="fullUrl" class="form-control col-10 mr-2">
                </div>
                <div class="col-2">
                    <button class="btb btn-success" type="submit">Shrink</button>
                </div>
            </div>
           
                
        
        </form>


        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Full Url</th>
                    <th>Short Url</th>
                    <th>Clikc</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>

                    <tr>
                        <td><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a></td>
                        <td><a href="<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a></td>
                        <td><%= shortUrl.clicks %>#</td>
                    </tr>

                <% }) %>
            </tbody>

        </table>
        <div class="row">
            <div class="col">
                <a href="" class="btn btn-warning">Clear All!</a>
            </div>
        </div>
    </div>
</body>
</html>